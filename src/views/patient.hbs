<!doctype html>
<html lang="en">
<head>
   <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SY Hospital</title>

    <!-- CSS FILES -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/bootstrap-icons.css" rel="stylesheet">
    <link href="css/owl.carousel.min.css" rel="stylesheet">
    <link href="css/owl.theme.default.min.css" rel="stylesheet">
    <link href="css/templatemo-medic-care.css" rel="stylesheet">
    <!-- TemplateMo 566 Medic Care -->
</head>

<body id="top">
    <main>
 <nav class="navbar navbar-expand-lg bg-light fixed-top shadow-lg">
            <div class="container">
                <a class="navbar-brand mx-auto d-lg-none" href="/">
                    SY Hospital
                    <strong class="d-block">Hospital Management System</strong>
                </a>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <a class="navbar-brand d-none d-lg-block" href="/">
                            SY Hospital
                            <strong class="d-block">Hospital Management System</strong>
                        </a>
                    </ul>
                </div>
            </div>
        </nav>

        <section>
            <div class="container">
                <div class="row">
                <div style="padding: 100px 0 30px 0; text-align: center;">
                <h1>{{title}} Page</h1>
                <img
                  src="images/gallery/patient.jpg"
                  style="width: 50%"
                />
              </div>
               <div style="margin-top: 50px">
              <h2>{{title1}}</h2>
              <table>
                <tr>
                    <td>PatientId</td>
                    <td>DepartmentId</td>
                    <td>Department</td>
                    <td>ReserveDate</td>
                
                </tr>
                {{#each reservation}}
                <tr>
                    <form method="post" action="/patient/updateReservation">
                        <td>{{PatientId}}</td>
                        <td style="display: none"><input type="text" name="PatientId" value={{PatientId}}></td>
                        <td><input type="text" name="DepartmentId" value={{DepartmentId}}></td>
                        <td>{{DepartmentName}}</td>
                        <td style="display: none"><input type="text" name="ReserveNum" value="{{ReserveNum}}"></td>
                        <td><input type="text" name="ReserveDate" value="{{ReserveDate}}"></td>
                        <td>
                            <input type="submit" value="Update">
                    </form>
                    </td>
                    <td>
                            <form method="post" action="/patient/deleteReservation">
                            <input type="hidden" name="ReserveNum" value={{ReserveNum}}>
                           <input type="submit" value="Delete">
                        </form>
                    </td>
                </tr>
                {{/each}}
{{!-- Reservation Add --}}
                <tr>
                <form method="post" action="/patient/addReservation">
                    <td><input type="hidden" name="PatientId" value=""></td>
                    <td><input type="text" name="DepartmentId" value=""></td>
                    <td><input type="hidden" name="DepartmentName" value=""></td>
                    <td><input type="text" name="ReserveDate" value=""></td>
                    <td colspan="2">
                        <input type="submit" value="Add">
                    </td>
                </form>
            </tr>
                        </table>
                    </div>                 
                </div>
            </div>
        </section>
    </main>

    <!-- JAVASCRIPT FILES -->
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/scrollspy.min.js"></script>
    <script src="js/custom.js"></script>
    <!-- TemplateMo 566 Medic Care -->
</body>
</html>
